<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/aboutUs">

        <ImageView
            android:id="@+id/appDev"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/joey"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/aboutDevText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appDev"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="45dp"
            android:gravity="center"
            android:text="This app is made by Joey Tribbiani as part of Internshala's Online Android Training project."
            android:textColor="#212121"
            android:textSize="19sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/aboutDevText1"
            android:gravity="center"
            android:text="App verision: 1.0"
            android:textColor="#212121"
            android:textSize="19sp" />
    </RelativeLayout>
</RelativeLayout>